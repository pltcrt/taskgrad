// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  password    String
  nickname    String
  level       Int     @default(1)
  strength    Int     @default(0)
  intelligence Int    @default(0)
  spirit      Int     @default(0)
  charisma    Int     @default(0)
  wealth      Int     @default(0)
  createdAt   DateTime @default(now())
}